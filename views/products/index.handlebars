
    


<div class="container conten">
    <form class="ml-auto " action="/products/insert" method="GET">
        <button class="btn btn-primary ml-2">New</button>
    </form>
    <form class="ml-auto d-flex" action="/products/search" method="GET">
        <input class="form-control" type="text" name="name" />
        <button class="btn btn-primary ml-2">Search</button>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Description</th>
                <th scope="col">Delete</th>
                <th scope="col">Update</th>

            </tr>
        </thead>
        <tbody>
            {{#each model}}
            <tr>

                <td> {{_id}} </td>
                <td>{{name}}</td>
                <td><img src={{image}} width="60px" height="60px"></td>
                <td>{{description}}</td>
                <td><a href="products/remove?id={{_id}}"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
